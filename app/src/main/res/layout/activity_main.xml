<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.calculator.main.MainActivity">

    <TextView
        android:id="@+id/textview_calculator_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="000"
        android:textSize="30pt"
        android:layout_alignParentTop="true"
        />

    <Button
        android:id="@+id/button_number_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="16pt"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textview_calculator_result"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/button_number_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="16pt"
        android:layout_toRightOf="@id/button_number_1"
        android:layout_below="@id/textview_calculator_result"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/button_number_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="16pt"
        android:layout_toRightOf="@id/button_number_2"
        android:layout_below="@id/textview_calculator_result"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/button_number_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="16pt"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/button_number_1"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/button_number_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="16pt"
        android:layout_toRightOf="@id/button_number_4"
        android:layout_below="@id/button_number_2"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/button_number_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="16pt"
        android:layout_toRightOf="@id/button_number_5"
        android:layout_below="@id/button_number_3"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/button_number_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="16pt"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/button_number_4"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/button_number_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="16pt"
        android:layout_toRightOf="@id/button_number_7"
        android:layout_below="@id/button_number_5"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/button_number_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="16pt"
        android:layout_toRightOf="@id/button_number_8"
        android:layout_below="@id/button_number_6"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/button_number_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16pt"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/button_number_7"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;-"
        android:textSize="16pt"
        android:layout_toRightOf="@id/button_number_0"
        android:layout_below="@id/button_number_7"
        android:onClick="onBackClick"/>

    <Button
        android:id="@+id/button_op_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="16pt"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/button_number_0"
        android:onClick="onOpClick"/>

    <Button
        android:id="@+id/button_op_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="16pt"
        android:layout_toRightOf="@id/button_op_add"
        android:layout_below="@id/button_number_0"
        android:onClick="onOpClick"/>

    <Button
        android:id="@+id/button_op_mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="16pt"
        android:layout_toRightOf="@id/button_op_sub"
        android:layout_below="@id/button_number_0"
        android:onClick="onOpClick"/>

    <Button
        android:id="@+id/button_op_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="16pt"
        android:layout_toRightOf="@id/button_op_mul"
        android:layout_below="@id/button_number_0"
        android:onClick="onOpClick"/>

    <Button
        android:id="@+id/button_op_eq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="="
        android:textSize="16pt"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/button_op_add"
        android:onClick="onOpClick"/>

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:textSize="16pt"
        android:layout_toRightOf="@id/button_op_eq"
        android:layout_below="@id/button_op_add"
        android:onClick="onResetClick"/>

</RelativeLayout>
